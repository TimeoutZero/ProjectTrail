angular.module 'ProjectTrailApp.controllers'

  # =============================================
  # ToolController
  # =============================================
  .controller 'ListTeamController', [ '$rootScope', '$scope', '$state',
    ($rootScope, $scope, $state) ->

      # =============================================
      # Attributes
      # =============================================
      $scope.teams = $rootScope.teams


      # =============================================
      # Methods
      # =============================================
      $scope.onClickItem = (item) -> $state.go 'tool.list', id : item.id

      # =============================================
      # Aux Methods
      # =============================================


      # =============================================
      # Initialize
      # =============================================


      return @

  ]